<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_course_evaluation"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   
	<TextView
        android:id="@+id/no_student_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xxlarge"
        android:textStyle="bold"
        android:text="@string/no_student_title_hint"
        android:padding="10dp" />
	
	<TextView
        android:id="@+id/no_student_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:text="@string/no_student_info_hint"
        android:layout_below="@id/no_student_title"
        android:padding="10dp" />
	
	<!-- BUTTON BAR -->
    <RelativeLayout
        android:id="@+id/footer_student_detail" 
        android:layout_width="fill_parent" 
        android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    style="@style/LtbBarButton">
	</RelativeLayout>

</RelativeLayout>