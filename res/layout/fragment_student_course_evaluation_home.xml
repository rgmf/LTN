<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_course_evaluation"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   
    <!-- HOME SECTION TITLE -->
	<TextView
        android:id="@+id/title_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xxlarge"
        android:textStyle="bold"
        android:text="@string/title_home_section"
        android:paddingRight="10dp" />
	
	<!-- CONCEPTS, PROCEDURES AND ATTITUDES SUMMARY -->
	<TextView 
	    android:id="@+id/concepts_average_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:text="@string/concept_average_mark"
        android:layout_below="@id/title_home_text"
        android:layout_alignParentLeft="true" />
	<TextView 
	    android:id="@+id/concepts_average_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_below="@id/title_home_text"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp" />
	
	<TextView 
	    android:id="@+id/procedures_average_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:text="@string/procedure_average_mark"
        android:layout_below="@id/concepts_average_hint"
        android:layout_alignParentLeft="true" />
	<TextView 
	    android:id="@+id/procedures_average_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_below="@id/concepts_average_hint"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp" />
	
	<TextView 
	    android:id="@+id/attitudes_average_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:text="@string/attitude_average_mark"
        android:layout_below="@id/procedures_average_hint"
        android:layout_alignParentLeft="true" />
	<TextView 
	    android:id="@+id/attitudes_average_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_below="@id/procedures_average_hint"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp" />
	
	<TextView 
	    android:id="@+id/total_mark_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:text="@string/total_mark_hint"
        android:layout_below="@id/attitudes_average_hint"
        android:layout_alignParentLeft="true"
        android:paddingTop="50dp" />
	<TextView 
	    android:id="@+id/total_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_below="@id/attitudes_average_hint"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"
        android:paddingTop="50dp" />

</RelativeLayout>