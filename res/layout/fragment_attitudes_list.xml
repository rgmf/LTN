<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/attitudes_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:paddingRight="20dp"
        android:layout_alignParentLeft="true" />
        
    <TextView
        android:id="@+id/attitudes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/attitudes_weight"
        android:textSize="@dimen/text_size_large" />
    
    <TextView
        android:id="@+id/attitudes_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:layout_alignParentRight="true" />
 
    <TextView
        android:id="@+id/attitudes_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attitudes_date"
        android:textSize="@dimen/text_size_medium" />

</RelativeLayout>